@model Author

<h3 class="text-center">New Author Add Page</h3>

<form method="post" asp-controller="Author" asp-action="Create" asp-area="Management">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">Name</label>
        <input type="text" class="form-control" asp-for="FirstName"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Surname</label>
        <input type="text" class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>