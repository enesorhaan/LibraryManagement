@model Author

<h3 class="text-center">Author Update Page</h3>
<form method="post" asp-controller="Author" asp-action="Edit" asp-area="Management">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">Name</label>
        <input type="text" class="form-control" asp-for="FirstName" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Surname</label>
        <input type="text" class="form-control" asp-for="LastName" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>