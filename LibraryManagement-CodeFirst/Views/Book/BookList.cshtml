@using LibraryManagement_CodeFirst.Dto;
@model List<BookDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Book List Page</h3>
<a asp-controller="Book" asp-action="Create" class="btn btn-primary" style="float:right">Add New</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>PageNumber</th>
            <th>Author</th>
            <th>BookType</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i + 1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].PageCount</td>
                <td>@Model[i].AuthorName</td>
                <td>@Model[i].BookTypeName</td>
                <td>
                    <a class="big-icon" asp-controller="Book" asp-action="Edit" asp-route-id="@Model[i].ID"><i class="bi bi-pencil-square"></i></a>
                    <a class="big-icon margin-icon" asp-controller="Book" asp-action="Delete" asp-route-id="@Model[i].ID"><i class="bi bi-x-circle-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>